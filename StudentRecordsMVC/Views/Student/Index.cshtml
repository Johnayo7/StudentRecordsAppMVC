@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<StudentRecordsMVC.Models.Domain.Student>

@{
    ViewData["Title"] = "All Students Record";
}

<h1>All Students Record</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th class="text-center">MatNo</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>PhoneNumber</th>
                <th>Department</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @{
                var counter = (Model.PageNumber - 1) * Model.PageSize + 1; // Calculate the starting index for the current page
            }
            @foreach (var student in Model)
            {
                <tr>
                    <td>@counter</td> <!-- Display counter value -->
                    <td class="text-center">@student.MatNo</td>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>@student.Gender</td>
                    <td>@student.PhoneNumber</td>
                    <td>@student.Department</td> 
                    <td><a href="@Url.Action("View","Student",
                        new { matNo = student.MatNo})">View</a></td>
                </tr>
                counter++; // Increment counter for each row
            }
        </tbody>
    </table>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), 
    new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded }) <!-- Render pagination controls -->
}

else
{
        <p>No Records found</p>
}

