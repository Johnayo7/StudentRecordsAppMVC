@model StudentRecordsMVC.Models.ViewModel.UpdateStudentRecordsVM

@{
    ViewData["Title"] = "Update Student Record";
}

<h1>Update Student Record</h1>

<form method="post" action="View" class="mt-5">
    <div class="mb-3">
        <label for="" class="form-label">MatNo</label>
        <input type="text" class="form-control" asp-for="MatNo" readonly>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Email Address</label>
        <input type="email" class="form-control" asp-for="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-1">
    <label for="gender" class="form-label">Gender</label>
</div>
<div class="form-check form-check-inline mb-3">
    <input class="form-check-input" type="radio" id="male" name="gender" 
           value="Male" required
           @(Model != null && Model.Gender == StudentRecordsMVC.Models.Enums.Gender.Male ? "checked" : "")>
    <label class="form-check-label" for="male">Male</label>
</div>
<div class="form-check form-check-inline mb-3">
    <input class="form-check-input" type="radio" id="female" name="gender" 
           value="Female" 
           @(Model != null && Model.Gender == StudentRecordsMVC.Models.Enums.Gender.Female ? "checked" : "")>
    <label class="form-check-label" for="female">Female</label>
</div>
    <span asp-validation-for="Gender" class="text-danger"></span>
    <div class="mb-3">
        <label for="" class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" required>
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Phone Number</label>
        <input type="number" class="form-control" asp-for="PhoneNumber" required>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Faculty</label>
        <input type="text" class="form-control" asp-for="Faculty" required>
        <span asp-validation-for="Faculty" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department" required>
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

     <button type="submit" class="btn btn-danger"
     asp-action="Delete"
     asp-controller="Student">Delete</button>
</form>
