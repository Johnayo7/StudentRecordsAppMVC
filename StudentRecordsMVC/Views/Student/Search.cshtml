@model IPagedList<Student>

@{
    ViewData["Title"] = "Search Results";

    //retrieve the search query from ViewBag and store it in a variable searchQuery
    string searchQuery = ViewBag.SearchQuery ?? "";
}

<h1>Search Results</h1>

