@if (Model != null && Model.Any())
{
            <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th class="text-center">MatNo</th>
                <th>Name</th>
                <th>Email</th>
                <th>Gender</th>
                <th>PhoneNumber</th>
                <th>Department</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @{
                // Calculate the starting index for the current page
                var counter = (Model.PageNumber - 1) * Model.PageSize + 1; 
            }
            @foreach (var student in Model)
            {
                    <tr>
                         <td>@counter </td> <!-- Display counter value -->
                        <td class="text-center">@student.MatNo</td>
                        <td>@student.Name</td>
                        <td>@student.Email</td>
                        <td>@student.Gender</td>
                        <td>@student.PhoneNumber</td>
                        <td>@student.Department</td>
                        <td><a href="@Url.Action("View","Student", 
                            new { matNo = student.MatNo})">View</a></td>
                    </tr>
                 // Increment counter for each row
                counter++; 
            }
        </tbody>
    </table>

    //include the searchQuery parameter along with the page number. 
    //This ensures that the search query is retained when navigating to the next page
    @Html.PagedListPager(Model, page => Url.Action("Search", new { searchQuery = searchQuery, page }),
    new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded }) <!-- Render pagination controls -->
}

else
{
        <p>No results found</p>
}
